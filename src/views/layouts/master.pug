//- Master layout

doctype html
html(lang='ru')
	head

		//- Meta
		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		meta(property='og:image' content='https://xochupomoch.ru/assets/images/og_banner.png')
		meta(property='twitter:image' content='https://xochupomoch.ru/assets/images/og_banner.png')
		link(rel='image_src' href='https://xochupomoch.ru/assets/images/og_banner.png')


		link(rel='apple-touch-icon' sizes='60x60' href='https://xochupomoch.ru/assets/images/favicon-fld/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='https://xochupomoch.ru/assets/images/favicon-fld/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='https://xochupomoch.ru/assets/images/favicon-fld/favicon-16x16.png')
		link(rel='manifest' href='https://xochupomoch.ru/assets/images/favicon-fld/site.webmanifest')
		link(rel='mask-icon' href='https://xochupomoch.ru/assets/images/favicon-fld/safari-pinned-tab.svg' color='#5bbad5')
		meta(name='msapplication-TileColor' content='#da532c')
		meta(name='theme-color' content='#ffffff')


		//- Title
		block title
			title Мобильное приложение Хочу помочь

	body
		//- Header
		include ../components/header.pug

		//- Mobile menu
		include ../components/menu.pug

		//- block content
		.main
			block content

		//- Footer
		include ../components/footer.pug

		//- Modal
		include ../components/_modal.pug

		//- block scripts
		block scripts

		script
